rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/UserRoles/$(request.auth.uid)) &&
        'admin' in get(/databases/$(database)/documents/UserRoles/$(request.auth.uid)).data.roles;
    }

    // Helper function to check if user is verified
    function isVerified() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/UserRoles/$(request.auth.uid)) &&
        'verified' in get(/databases/$(database)/documents/UserRoles/$(request.auth.uid)).data.roles;
    }

    // Allow users to read their own document, or admins to read all user records
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || isAdmin()
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read their own roles, or admins to read/write all user roles
    match /UserRoles/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || isAdmin()
      );
      allow write: if isAdmin();
    }

    // Allow only admins to read and write to the roles collection
    match /Roles/{roleId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
